<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="33dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profilpicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/usernamelabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/friendUserName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="#FFFFFFFF" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textColor="#FFFFFFFF" />

            <TextView
                android:id="@+id/friendAge"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:textColor="#FFFFFFFF" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wohnort"
                android:textColor="#FFFFFFFF" />

            <TextView
                android:id="@+id/friendWohnort"
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <TextView
                android:id="@+id/favoriteworkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="favoriteworkouts"
                android:textColor="#FFFFFFFF" />

            <EditText
                android:id="@+id/favoriteWorkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:linksClickable="true"
                android:text="list of favorite workouts"
                android:textColor="#FFFFFFFF" />

            <TextView
                android:id="@+id/hochgeladeneWorkouts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#FFFFFFFF" />

            <EditText
                android:id="@+id/hochgeladeneWorkoutsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:text="Liste aller hochgeladenen Workouts"
                android:textColor="#FFFFFFFF" />

            <ToggleButton
                android:id="@+id/addFriend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ToggleButton"
                android:textOff="Add Friend"
                android:textOn="Remove Friend" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>